<body>

    <%- include("../includes/navbar.ejs") %>
    <%  if(sucMsg && sucMsg.length>0){ %>
        <div class="alert alert-success col-6 offset-3">
          <%= sucMsg %>
          <button type="button" style="margin-left: 60%;" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <%  if(errMsg && errMsg.length>0){ %>
